#:kivy 1.0

<Space>:
    size: [400, 400]

<Ship>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: int(self.x), int(self.y)
            size: [20, 20]
        Color:
            rgb: 0, 1, 0
        Rectangle:
            pos: int(self.x) + 20, int(self.y) + 20
            size: [10, 10]

<Bullet>:
    canvas:
        Color:
            rgb: 0.5, 0.5, 0
        Rectangle:
            pos: int(self.x), int(self.y)
            size: [self.bullet_size, self.bullet_size]
